/* packageMore/pages/sanctionCheck/list/index.wxss */
page {
  background-color: #F0F1F5;
}

.sanctionContainer {
  padding: 0 30rpx 40rpx;
}

.sanctionContainer .topTitles {
  position: sticky;
  z-index: 10;
  top: 0;
  left: 0;
  right: 0;
  padding: 30rpx 0 0;
  background-color: #F0F1F5;
  width: 690rpx;
}

.sanctionContainer .topContainer {
  background-image: url(https://wind.cma-cgm.com/images/sanction.png);
}

.topTitles .categoryLists {
  padding: 0 30rpx;
  background-color: #ffffff;
  margin-top: 30rpx;
  height: 96rpx;
}

.topTitles .categoryList {
  display: flex;
  align-items: center;
  height: 100%;
  border-bottom: 1rpx solid #04246A;
}

.topTitles .categoryList .oneCategory {
  display: flex;
  flex: 1;
  height: 100%;
  justify-content: center;
  align-items: center;
  color: #04246A;
  font-size: 32rpx;
}

.topTitles .categoryList .categoryChecked {
  font-weight: bold;
  position: relative;
}

.topTitles .categoryList .categoryChecked .checkLine {
  width: 120rpx;
  height: 8rpx;
  background-color: #E20202;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.sanctionList {
  padding: 0 48rpx 30rpx;
  background-color: #ffffff;
  width: 690rpx;
}

.sanctionList .oneSanction {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #071E5D;
}

.sanctionList .oneSanction:nth-last-of-type(1) {
  border-bottom: none;
}

.sanctionList .oneSanction image {
  width: 16rpx;
  height: 30rpx;
}

.reminds {
  font-size: 20rpx;
  color: #6B7790;
  text-align: center;
}

.reminds text {
  color: #071E5D;
}