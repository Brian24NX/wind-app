/* packageMore/pages/BusinessAndOperational/index.wxss */
page {
  background-color: #F0F1F5;
}

.businessContainer {
  padding: 30rpx;
}

.businessContainer .topContainer {
  background-image: url(https://ycyy-db-01.obs.cn-east-3.myhuaweicloud.com/test/yewu.png);
}

.businessContainer .topTitles {
  padding: 30rpx;
}

.businessContainer .topTitles .topBg {
  width: 100%;
  height: 210rpx;
}

.businessContainer .businessLists {
  background-color: #ffffff;
  padding: 40rpx 40rpx 1rpx;
  margin-top: 30rpx;
}

.businessContainer .businessLists .categoryList {
  white-space: nowrap;
  border-bottom: 1rpx solid #04246A;
  box-shadow: 2rpx 0 2rpx -2rpx rgba(0, 0, 0, 0.22);
  padding: 0 4rpx;
}

.businessContainer .businessLists .categoryList .oneCategory {
  display: inline-block;
  padding-bottom: 10rpx;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #071E5D;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  min-width: 80rpx;
  text-align: center;
}

.businessContainer .businessLists .categoryList .oneCategory:nth-last-of-type(1) {
  margin-right: 0;
}

.businessContainer .businessLists .categoryList .categoryActived {
  position: relative;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}

.businessContainer .businessLists .categoryList .categoryActived .line {
  width: 80rpx;
  height: 8rpx;
  background-color: #E20202;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

.businessList .oneBusiness {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}

.businessList .oneBusiness:nth-last-of-type(1) {
  border-bottom: none;
}

.businessList .oneBusiness .businessTitle {
  font-size: 28rpx;
  color: #04246A;
}

.businessList .oneBusiness .businessTime {
  color: #6B7790;
  font-size: 24rpx;
  margin-top: 6rpx;
}