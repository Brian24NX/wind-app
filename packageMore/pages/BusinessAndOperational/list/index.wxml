<!--packageMore/pages/BusinessAndOperational/index.wxml-->
<view class="businessContainer">
  <view class="topTitles">
    <text class="topContainer">业务及运营\n信息更新</text>
  </view>
  <view class="businessLists">
    <view class="businessList">
      <view class="oneBusiness" wx:for="{{list}}" wx:key="index" catchtap="toDetail" data-id="{{item.id}}">
        <view class="businessTitle">Suspension of Le Havre and Puerto Angamos calls on EUROSAL service connecting North Europe with West Coast South America & the Caribbean</view>
        <view class="businessTime">Monday, April 11, 2022</view>
      </view>
    </view>
  <loading loading="{{loading}}" noMore="{{noMore}}" wx:if="{{!noData}}"></loading>
  <van-empty
    wx:if="{{!loading && noData}}"
    description="暂无相关信息"
  />
  </view>
</view>