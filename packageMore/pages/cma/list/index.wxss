/* packageMore/pages/cma/list/index.wxss */
page {
  background-color: #F0F1F5;
}

.cmaContainer {
  padding-top: 30rpx;
}

.cmaContainer .topContainer {
  width: 690rpx;
  height: 210rpx;
  background: url(https://ycyy-db-01.obs.cn-east-3.myhuaweicloud.com/test/CMA.png) no-repeat;
  background-size: 100%;
  margin: 0 auto 30rpx;
  padding-left: 50rpx;
  display: flex;
  align-items: center;
  font-size: 64rpx;
  font-family: Antonio-Regular;
  font-weight: 400;
  color: #071E5D;
}

.cmaContainer .cmaList {
  width: 690rpx;
  margin: 0 auto 40rpx;
  background-color: #ffffff;
  padding: 1rpx 40rpx;
}

.cmaContainer .cmaList .oneCma {
  border-bottom: 1rpx solid #EEEEEE;
  padding: 30rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.cmaContainer .cmaList .oneCma:nth-last-of-type(1) {
  border-bottom: none;
}

.cmaContainer .cmaList .oneCma .cmaTitle {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #04246A;
  width: 390rpx;
}

.cmaContainer .cmaList .oneCma image {
  width: 180rpx;
  height: 128rpx;
}