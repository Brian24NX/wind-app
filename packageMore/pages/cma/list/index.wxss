/* packageMore/pages/cma/list/index.wxss */
page {
  background-color: #F0F1F5;
}

.cmaContainer {
  padding-top: 30rpx;
}

.cmaContainer .topContainer {
  background-image: url(https://wind.cma-cgm.com/images/CMA.png);
  margin: 0 auto 30rpx;
  font-family: Antonio-Regular;
  font-weight: 400;
}

.cmaContainer .cmaList {
  width: 690rpx;
  margin: 0 auto 40rpx;
  background-color: #ffffff;
  padding: 1rpx 40rpx;
}

.cmaContainer .cmaList .oneCma {
  border-bottom: 1rpx solid #EEEEEE;
  padding: 30rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.cmaContainer .cmaList .oneCma:nth-last-of-type(1) {
  border-bottom: none;
}

.cmaContainer .cmaList .oneCma .cmaTitle {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #04246A;
  width: 390rpx;
}

.cmaContainer .cmaList .oneCma image {
  width: 180rpx;
  height: 128rpx;
}