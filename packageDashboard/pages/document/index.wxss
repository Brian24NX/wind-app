/* packageDashboard/pages/document/index.wxss */
page {
  background-color: #f5f5f5;
}

.documentContainer {
  padding: 30rpx;
}

.documentContainer .documentList {
  padding-top: 30rpx;
}

.documentContainer .documentList .oneDocument {
  background-color: #ffffff;
  padding: 40rpx 46rpx;
  margin-bottom: 30rpx;
}

.documentContainer .documentList .oneDocument .ones {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.documentContainer .documentList .oneDocument .ones .oneLeft {
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6B7790;
}

.documentContainer .documentList .oneDocument .ones .oneRight {
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #071E5D;
}

.documentContainer .documentList .oneDocument .fileContent {
  display: flex;
  align-items: center;
  border: 1rpx solid #CFD2DA;
  padding: 12rpx 18rpx;
}

.documentContainer .documentList .oneDocument .fileContent image {
  width: 116rpx;
  height: 124rpx;
  margin-right: 16rpx;
}

.documentContainer .documentList .oneDocument .fileContent .filtTitle {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #071E5D;
}

.documentContainer .documentList .oneDocument .fileContent .send {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6B7790;
  margin-top: 10rpx;
}

.documentContainer .documentList .empty {
  background-color: #ffffff;
  padding: 80rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #04246A;
  text-align: center;
}

.documentContainer .documentList .empty image {
  width: 436rpx;
  height: 336rpx;
  margin-bottom: 40rpx;
}