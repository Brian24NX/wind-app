/* packageDashboard/pages/shipment/detail/index.wxss */
page {
  background-color: #F0F1F5;
}

.shipmentDetailContainer {
  padding: 0 30rpx 30rpx;
}

.shipmentDetailContainer .topTitles {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
  background-color: #F0F1F5;
  padding: 0 30rpx;
}

.shipmentLists {
  margin-top: 350rpx;
}

.viewTypesList {
  padding: 0 48rpx 10rpx;
  background-color: #ffffff;
}

.viewTypes {
  height: 94rpx;
  display: flex;
  border-bottom: 1rpx solid #04246A;
}

.viewTypes .oneType {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #04246A;
}

.viewTypes .typeActived {
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #04246A;
  position: relative;
}

.viewTypes .typeActived .activedLine {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 8rpx;
  background-color: #E20202;
}