<view class="componentHuoguoContainer">
  <view class="oneOrder" wx:for="{{3}}" catchtap="toDetail">
    <view class="orderTop">
      <view class="topLeft">
        <text>{{languageContent.eat}}</text>
      </view>
      <view class="topRight">Mon 28-FEB-2022 21:00</view>
    </view>
    <view class="orderBottom">
      <view class="oneBottom">
        <image src="/assets/img/search/jzxh@2x.png" mode="aspectFit" class="leftIcon"></image>
        <view class="details">
          <view class="detailLeft">
            <view class="huogui">ERFS6325612</view>
            <view>{{languageContent.huoguihao}}</view>
          </view>
          <view class="detailRight">
            <view class="xiangxing">40HC</view>
            <view>{{languageContent.xiangxing}}</view>
          </view>
        </view>
      </view>
      <view class="oneBottom">
        <image src="/assets/img/search/zyg@2x.png" mode="aspectFit" class="leftIcon"></image>
        <view class="details" style="flex-direction: column;">
          <view>
            <view class="status">Discharged in Transhipment</view>
          </view>

          <view class="details2">
            <view class="detailLeft">
              <view class="address">SHANGHAI</view>
              <view>{{languageContent.location}}</view>
            </view>
            <view class="detailRight">
              <view class="xiangxing time">06-FEB-2022 10:00</view>
              <view>{{languageContent.time}}</view>
            </view>
          </view>
        </view>
      </view>
      <view class="oneBottom">
        <image src="/assets/img/search/hlzy@2x.png" mode="aspectFit" class="leftIcon"></image>
        <view class="details">
          <view class="detailLeft">
            <view class="huogui chuanming">JIAYONG</view>
            <view>{{languageContent.chuanming}}</view>
          </view>
          <view class="detailRight">
            <view class="xiangxing">8991WN</view>
            <view>{{languageContent.chuanci}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="dashboardEmpty" wx:if="{{false}}">
    <image src="https://ycyy-db-01.obs.cn-east-3.myhuaweicloud.com/test/no.png" mode="aspectFit"></image>
    <view>{{languageContent.noContainersData}}</view>
  </view>
</view>