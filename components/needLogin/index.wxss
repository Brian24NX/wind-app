.loginContainer {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loginRemind {
  font-size: 36rpx;
  font-family: Antonio-Bold, Antonio;
  font-weight: bold;
  color: #04246A;
  text-align: center;
  padding: 0 40rpx;
}

.loginBtn {
  width: 590rpx;
  height: 88rpx;
  background-color: #2D75FF;
  border: none;
  border-radius: 0;
  margin-top: 30rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}