/* components/needLogin/index.wxss */
.loginContainer {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.loginContainer image {
  width: 534rpx;
  height: 426rpx;
  margin-bottom: 56rpx;
}

.loginRemind {
  font-size: 36rpx;
  font-family: Antonio-Regular, Antonio;
  font-weight: bold;
  color: #04246A;
  text-align: center;
  padding: 0 40rpx;
}

.loginBtn {
  width: 590rpx;
  height: 88rpx;
  background-color: #2D75FF;
  border: none;
  border-radius: 0;
  margin-top: 58rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.gotoWebsite {
  color: #071E5D;
  font-size: 28rpx;
  position: relative;
  padding-top: 24rpx;
  width: 590rpx;
  font-family: ArialMT;
}

.siteText {
  font-size: 28rpx;
  padding-top: 20rpx;
  color: #071E5D;
  font-family: ArialMT;
}

.urlCopy {
  color: #2B73FC;
  font-size: 28rpx;
  font-family: ArialMT;
}