  width: 100%;
  position: fixed;
  z-index: 10;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx 0 rgba(238, 238, 238, 0.5);
}

.navbarContainer .logo {
  width: 240rpx;
  height: 100rpx;
}

.navbarContainer .van-hairline--bottom:after {
  border-bottom-width: 0;
}

