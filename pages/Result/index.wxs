var fmtDate = function (obj) {
  if (!obj) return ''
  var time = getDate(obj);
  var year = time.getFullYear();
  var month = time.getMonth() + 1;
  var date = time.getDate();

  month = month < 10 ? "0" + month : month;
  date = date < 10 ? "0" + date : date;
  return year + "-" + month + "-" + date;
}

var fmtDate2 = function (obj) {
  var time = getDate(obj);
  var month = time.getMonth() + 1;
  var date = time.getDate();

  month = month < 10 ? "0" + month : month;
  date = date < 10 ? "0" + date : date;
  return month + "." + date;
}

var weekDay = function (obj) {
  if (!obj) return ''
  var date = getDate(obj).getDay();
  var week = '';
  switch (date) {
    case 0:
      week = "日";
      break;
    case 1:
      week = "一";
      break;
    case 2:
      week = "二";
      break;
    case 3:
      week = "三";
      break;
    case 4:
      week = "四";
      break;
    case 5:
      week = "五";
      break;
    case 6:
      week = "六";
      break;
  }
  return week;
}

function getShopName(list) {
  var name = ''
  for (var index = 0; index < list.length; index++) {
    var element = list[index];
    if (element.transportation.meanOfTransport === 'Vessel') {
      name = element.transportation.vehicule.vehiculeName
      break 
    }
  }
  return name
}

module.exports = {
  fmtDate: fmtDate,
  fmtDate2: fmtDate2,
  weekDay: weekDay,
  getShopName: getShopName
}