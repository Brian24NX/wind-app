          </view>
          <view class="time end">2022-03-28 星期一 TOKYO, JP</view>
        </view>
        <view class="rightContent">
          <view class="timeDay">4天</view>
          <view class="zhuanrun">
            <image src="/assets/img/result/zhuanyun@2x.png"></image>
