/*history*/
.historyContainers {
  padding: 0 30rpx 10rpx;
}

.historyContainers .historyTitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #626262;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.historyContainers .historyTitle .historydel {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.historyContainers .historyTitle .historydel image {
  width: 32rpx;
  height: 32rpx;
}

.historyContainers .result {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.historyContainers .result .oneResult {
  padding: 10rpx 75rpx 10rpx 30rpx;
  font-size: 24rpx;
  color: #626262;
  position: relative;
  background-color: #EAEBEE;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.historyContainers .result .oneResult .oneDelete {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  right: 20rpx;
}

.historyContainers .result .oneResult .oneDelete image {
  width: 24rpx;
  height: 24rpx;
}
