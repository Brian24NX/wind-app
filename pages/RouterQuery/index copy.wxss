/* pages/RouterQuery/index.wxss */
page {
  background-color: #F0F1F5;
}

.queryContainer {
  padding-bottom: 40rpx;
  padding-top: 30rpx;
}

.searchContainers {
  width: 690rpx;
  background-color: #ffffff;
  margin: 0 auto 30rpx;
  padding: 0 48rpx 48rpx;
}

.searchtitle {
  padding: 34rpx 0 48rpx 0;
}

.route {
  font-size: 56rpx;
  color: #04246A;
