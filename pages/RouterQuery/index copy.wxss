/**
* 输入框样式
*/
.polimg,
.podimg {
  width: 44rpx;
  height: 44rpx;
}

.podlocation {
  width: 22rpx;
  height: 28rpx;
}

.font14 {
  font-size: 28rpx;
  color: #04246A;
  margin-left: 30rpx;
}
.xiehuo,.qiyun{
  margin-left: 0;
}
.PODinput{
  top: 20rpx;
}
.polinput,
.podinput {
  height: 88rpx;
  border: 2rpx solid #DFDFDF;
  margin-left: 50rpx;
  margin-top: 10rpx;
  padding: 0 0 0 10rpx;
  font-size: 28rpx;
  color:#04246A;
  display: flex;
  align-items: center;
  position: relative;
}

.polinput input,
.podinput input {
  width: 410rpx;
}

.PODinput,
.POLinput {
  /* position: relative; */
  height: 160rpx;
}
.weekselect{
   top: -20rpx;
}
.deleteIcon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 88rpx;
}

.deleteIcon image {
  width: 30rpx;
  height: 30rpx;
}

.ship {
  width: 52rpx;
  height: 52rpx;
  position: relative;
  left: -15rpx;
}

.redcircle {
  width: 18rpx;
  height: 18rpx;
  background: #E20202;
  display: inline-block;
  border-radius: 50%;
}

.line {
  width: 2rpx;
  min-height: 84rpx;
  background: #9AA6C4;
  border-radius: 4rpx;
  opacity: 0.59;
  margin-left: 8rpx;
}
.inputcontainer{
  width: 100%;
  min-height: 330rpx;
}
.noRequestBorder {
  border: 2rpx solid #E10202;
}
.leftcontainer{
  float: left;
  display: flex;
  flex-direction: column;
}
.rightcontianer{
  position: relative;
  top: -10rpx;
}


.searchimg,
.dateimg,
.weekimg {
  width: 52rpx;
  height: 52rpx;
}

.scroll-view {
  width: 540rpx;
  position:absolute;
  background:#ffffff;
  border: 1rpx solid #00245d;
  top: 86rpx;
  left: -1rpx;
  z-index: 40;
  max-height: 430rpx;
}

.scroll-view .item:hover{
  color: #1c4ebb;
}
.scroll-view .item, .scroll-viewpod .item {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #e2e2e2;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
}

.dateinput {
  width: calc(100% - 64rpx);
  height: 88rpx;
  display: flex;
  flex-direction: space-between;
  border: 2rpx #DFDFDF solid;
  margin-left: 70rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
  color: #04246A;
}

