/*history*/
.result{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: baseline;
}

.flex {
  height: 24px;
  background: #EAEBEE;
  border-radius: 24rpx;
}

.flex:nth-child(2n) {
  margin-left: 20rpx;
}

.historydel {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: -20rpx;
}

.clearstyle {
  width: 32rpx;
  height: 32rpx;
  padding: 0;
  float: right;
  display: inline-block;
}

.clearstyle::after {
  border: none;
}

.font12 {
  font-size: 24rpx;
  color: #626262;
}

.searchselect,
.dateselect,
.weekselect {
  position: relative;
  top: -40rpx;
  left: -20rpx;
}

.weekselect {
  top: -60rpx;
}

.pos {
  position: relative;
  top: -15rpx;
  left: -8rpx;
}

.van-tag--default {
  --tag-default-color: #F0F1F5 !important;
}

.vant-tag {
  color: #626262 !important;
}