<view class="home-layout">
  <view>{{language.home}}</view>
  <view  bindtap='changeLanguage' class='language' data-index='0' wx:if="{{langIndex == 1}}">
  {{language.language}}
 </view>
 <view bindtap='changeLanguage' class='language' data-index='1' wx:elif="{{langIndex == 0}}">
  {{language.language}}
    </view>
  <view class="card">
     <!-- <view >
       <image  class="image" mode="aspectFill" src="../../assets/img/tabs/home.png" />
       <text  class="time">2022-3-14 15:56:03</text>
       <view class="title">卡片式布局</view>
     </view>    -->
     <view class="swiper-tab">
      <view class="swiper-tab-list {{currentTab==0?'on':''}}" data-current="0" bindtap="switchNav">TRACKING</view>
      <view class="swiper-tab-list {{currentTab==1?'on':''}}" data-current="1" bindtap="switchNav">SCHEDULE</view>
      <view class="swiper-tab-list {{currentTab==2?'on':''}}" data-current="2" bindtap="switchNav">PRICE</view>
   </view>
   <view class='popup-cnt'>
     <block  wx:if="{{currentTab == 0}}" wx:key="couponId">
           <text>我是TRACKING</text>
     </block>
     <block  wx:if="{{currentTab == 1}}" wx:key="couponId">
        <text>我是SCHEDULE</text>
     </block>
     <block  wx:if="{{currentTab == 2}}" wx:key="couponId">
        <text>我是PRICE</text>
      </block>
   </view>
  </view>
  <!-- <van-button type="primary">van-button</van-button> -->
</view>