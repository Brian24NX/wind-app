<view class="navbarContainer" style="height: calc({{navHeight}}px + 36rpx);">
  <image style="margin-top: {{navTop}}px;" src="../../assets/img/logo@2x.png" class="logo" mode="aspectFit"></image>
</view>

<view class="homeContainer" style="padding-top: calc({{navHeight}}px + 36rpx);">
  <view class="searchContainers">
    <view class="tabContainer">
      <view class="oneTab {{actived === item.id ? 'actived' : ''}}" wx:for="{{tabList}}" wx:key="index" bindtap="changeSearchTab" data-type="{{item.id}}">
        <text>{{item.label}}</text>
        <view class="line"></view>
      </view>
    </view>
    <!-- 货物追踪 -->
    <view class="searchContents" wx:if="{{actived === 'TRACKING'}}">
      <view class="remind">输入货柜号，提单号或订舱号。</view>
      <input class="inputs {{showRemind ? 'noRequestBorder' : ''}}" type="text" placeholder="ex:ABCD1234567" placeholder-class="placeholder" bindinput="setHuoGui" />
      <view class="noRequest" wx:if="{{showRemind}}">{{huiguiType === 1 ? '此项为必填项' : huiguiType === 2 ? '号码无效，请检查格式' : '最多可同时查询三个货柜状态，请重新输入'}}</view>
      <button class="searchBtn" hover-class="hoverClass" bindtap="toHuoWu">{{content.lang.userCenter.homeInfo.goods}}</button>
      <view class="reminds">{{content.lang.userCenter.homeInfo.tips}}</view>

    </view>
    <!-- 船期查询 -->
    <view class="searchContents" wx:if="{{actived === 'SCHEDULE'}}">
      <view class="serchTitle">起运港</view>
      <view class="xialaInput">
        <input class="inputs {{showRemind2 ? 'noRequestBorder' : ''}}" type="text" placeholder="名称/代码" placeholder-class="placeholder" bindinput="setQiYun" />
        <cover-view class="xialaContainer" wx:if="{{codeList.length}}">
          <cover-view class="oneXiala" wx:for="{{codeList}}" wx:key="index">{{item.point}}</cover-view>
        </cover-view>
      </view>
      
      <view class="noRequest" wx:if="{{showRemind2}}">此项为必填项</view>
      <view class="serchTitle mt20">卸货港</view>
      <input class="inputs {{showRemind3 ? 'noRequestBorder' : ''}}" type="text" placeholder="名称/代码" placeholder-class="placeholder" bindinput="setXieHuo" />
      <view class="noRequest" wx:if="{{showRemind3}}">此项为必填项</view>
      <button class="searchBtn" hover-class="hoverClass" bindtap="toChuanQi">搜索</button>
      <view class="searchBtn2" bindtap="toAdvancedSearch">高级搜索</view>
    </view>
    <!-- 价格 -->
    <view class="searchContents" wx:if="{{actived === 'PRICE'}}">
      <view class="priceList">
        <view class="onePrice">
          <image src="../../assets/img/home/PRICE_1@2x.png"></image>
          <view>实时 报价</view>
        </view>
        <view class="onePrice">
          <image src="../../assets/img/home/PRICE_2@2x.png"></image>
          <view>柜租 费率</view>
        </view>
        <view class="onePrice">
          <image src="../../assets/img/home/PRICE_3@2x.png"></image>
          <view>查询 费率</view>
        </view>
      </view>
    </view>
  </view>
  <!-- discover -->
  <view class="discoverContainer">
    <view class="discoverTitle">发现更多</view>
    <swiper class="swiper" bindchange="changeCurrentDto">
      <swiper-item wx:for="{{2}}" wx:key="index">
        <view class="discoverList">
          <view class="oneDiscover" bindtap="toMore">
            <image class="icon" src="../../assets/img/home/discover_1@2x.png"></image>
            <view class="discoverRight">
              <view class="discoverName">{{content.lang.userCenter.homeInfo.valueAddedService}}</view>
              <view>定制方案</view>
            </view>
          </view>
          <view class="oneDiscover" bindtap="toMore">
            <image class="icon" src="../../assets/img/home/discover_2@2x.png"></image>
            <view class="discoverRight">
              <view class="discoverName">关于达飞</view>
              <view>集团介绍</view>
            </view>
          </view>
          <view class="oneDiscover" bindtap="toMore">
            <image class="icon" src="../../assets/img/home/discover_3@2x.png"></image>
            <view class="discoverRight">
              <view class="discoverName">新闻资讯</view>
              <view>往期新闻</view>
            </view>
          </view>
          <view class="oneDiscover" bindtap="toMore">
            <image class="icon" src="../../assets/img/home/discover_4@2x.png"></image>
            <view class="discoverRight">
              <view class="discoverName">在线服务</view>
              <view>我有疑问</view>
            </view>
          </view>
        </view>
      </swiper-item>
    </swiper>
    <view class="swiperDtos">
      <view class="oneDto {{currentIndex === index ? 'dtoActived' : ''}}" wx:for="{{2}}" wx:key="index"></view>
    </view>
  </view>
</view>