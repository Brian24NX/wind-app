/* pages/Shipment/index.wxss */
page {
  background-color: #F0F1F5;
}

.homeContainer .searchContainers {
  width: 690rpx;
  background-color: #ffffff;
  margin: 30rpx auto;
  padding: 30rpx 48rpx 48rpx;
}

.homeContainer .searchContainers .shipTitles {
  display: flex;
  align-items: center;
}

.homeContainer .searchContainers .shipTitles .shipLine {
  width: 8rpx;
  height: 50rpx;
  background-color: #E20202;
  margin-right: 15rpx;
}

.homeContainer .searchContainers .shipTitles .shipTitle {
  font-size: 56rpx;
  font-family: Antonio-Regular, Antonio;
  font-weight: bold;
  color: #04246A;
}

.homeContainer .searchContainers .shipTitles .scale {
  transform: scaleX(0.85);
  transform-origin: left;
}

.homeContainer .searchContainers .shipTitles .shipTitle text:nth-last-of-type(1) {
  color: #4468BA;
}

.homeContainer .searchContainers .searchContents {
  margin-top: 50rpx;
}

.homeContainer .searchContainers .searchContents .remind {
  color: #071E5D;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.homeContainer .searchContainers .searchContents .serchTitle {
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #04246A;
}

.homeContainer .searchContainers .searchContents .mt20 {
  margin-top: 20rpx;
}

.homeContainer .searchContainers .searchContents .inputs {
  height: 88rpx;
  border: 1rpx solid #DFDFDF;
  font-size: 36rpx;
  padding: 0 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.homeContainer .searchContainers .searchContents .inputs input {
  height: 100%;
  width: 490rpx;
}

.homeContainer .searchContainers .searchContents .inputs .delete {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.homeContainer .searchContainers .searchContents .inputs .delete image {
  width: 30rpx;
  height: 30rpx;
}

.homeContainer .searchContainers .searchContents .xialaInput {
  position: relative;
}

.homeContainer .searchContainers .searchContents .xialaInput .xialaContainer {
  position: absolute;
  top: 86rpx;
  z-index: 10;
  background-color: #f5f5f5;
  width: 100%;
  max-height: 600rpx;
  overflow-y: auto;
}

.homeContainer .searchContainers .searchContents .xialaInput .xialaContainer .oneXiala {
  /* width: 100%; */
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.oneXiala {
  height: 80rpx;
  background-color: #ffffff;
  border: 2rpx solid #e2e2e2;
  max-height: 430rpx;
}

.homeContainer .searchContainers .searchContents .noRequestBorder {
  border: 2rpx solid #E2014B;
}

.homeContainer .searchContainers .searchContents .noRequest {
  font-size: 24rpx;
  color: #E2014B;
  margin-top: 20rpx;
  margin-bottom: -10rpx;
  display: flex;
  align-items: center;
}

.homeContainer .searchContainers .searchContents .noRequest image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.homeContainer .searchContainers .searchContents .searchBtn {
  width: 100%;
  height: 88rpx;
  background-color: #2D75FF;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #ffffff;
  border-radius: 0;
}

.homeContainer .searchContainers .searchContents .hoverClass {
  opacity: 0.9;
}

.homeContainer .searchContainers .searchContents .searchBtn2 {
  margin-top: 20rpx;
  color: #071E5D;
  font-size: 28rpx;
  text-align: center;
}

.homeContainer .searchContainers .searchContents .reminds {
  color: #949494;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.placeholder {
  color: #B9BFCA;
  font-size: 28rpx;
  font-style: italic;
}