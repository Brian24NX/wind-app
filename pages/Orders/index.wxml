<!--pages/Orders/index.wxml-->
<view class="orderContainer">
  <view class="inputContainer">
    <input value="{{shipmentRef}}" type="text" class="inputs" placeholder="{{languageContent.placeholder}}" placeholder-class="placeholder" bindinput="changeHuoguiValue" bindconfirm="searchList" />
    <view class="delete" catchtap="deleteValue">
      <image src="/assets/img/search/close@2x.png" wx:if="{{shipmentRef}}"></image>
    </view>
    <view class="search" bindtap="searchList">
      <image src="/assets/img/search/search@2x.png"></image>
    </view>
  </view>
  <!-- 结果 -->
  <one languageContent="{{languageContent}}" detail="{{list[0]}}" list="{{list}}" wx:if="{{list.length === 1 && !noData && !loading}}"></one>
  <more languageContent="{{languageContent}}" list="{{list}}" wx:if="{{list.length > 1 && !noData && !loading}}"></more>
  <no languageContent="{{languageContent}}" lists="{{list}}" wx:if="{{noData && !loading}}"></no>
</view>