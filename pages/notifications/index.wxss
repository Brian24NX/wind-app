/* pages/notifications/index.wxss */
page {
  background-color: #f5f5f5;
}

.notice {
  background-color: #0073e2;
  padding: 18rpx 44rpx 18px 30rpx;
  display: flex;
  justify-content: start;
  align-items: flex-start;
}

.notice .avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  margin-top: 10rpx;
}

.notice .noticeText {
  font-size: 28rpx;
  font-weight: 500;
  color: #ffffff;
  line-height: 20px;
  font-family: PingFangSC-Medium, PingFang SC;
}

.notificationContainer {
  padding: 0 30rpx 30rpx;
}

.officialCard {
  margin-top: 30rpx;
}
.subscribeCard {
  background-color: #ffffff;
  display: flex;
  align-items: start;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 30rpx 48rpx;
  flex-direction: column;
}

.subscribeCard .subscribeTitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #071e5d;
  line-height: 40rpx;
  margin-bottom: 12rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
}
.subscribeCard .subscribeDes {
  font-size: 24rpx;
  font-weight: 400;
  color: #6b7790;
  line-height: 34rpx;
  margin-bottom: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.subscribeCard .subscribeRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.subscribeRow .checkBox {
  margin-bottom: 8rpx;
}

.switchStyle {
  margin-top: 4rpx;
}

.checkboxLabel {
  font-size: 24rpx;
  font-weight: 400;
  color: #071e5d;
  line-height: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
