/* pages/notifications/index.wxss */
page {
  background-color: #f5f5f5;
}

.notice {
  background-color: #0073e2;
  padding: 18rpx 44rpx 18px 30rpx;
  display: flex;
  justify-content: start;
  align-items: flex-start;
}

.notice .avatar {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.notice .noticeText {
  font-size: 14px;
  font-weight: 500;
  color: #ffffff;
  line-height: 20px;
}

.notificationContainer {
  padding: 0 30rpx 30rpx;
}

.officialCard {
  margin-top: 30rpx;
}
.notificationContainer .notificationList .subscribeCard {
  background-color: #ffffff;
  display: flex;
  align-items: start;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 30rpx 48rpx;
  flex-direction: column;
}

.subscribeCard .subscribeTitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #071e5d;
  line-height: 40rpx;
  margin-bottom: 12rpx;
}
.subscribeCard .subscribeDes {
  font-size: 24rpx;
  font-weight: 400;
  color: #6b7790;
  line-height: 34rpx;
  margin-bottom: 20rpx;
}

.subscribeCard .subscribeRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.subscribeRow .checkBox {
  margin-bottom: 8rpx;
}

.checkboxLabel {
  font-size: 12px;
  font-weight: 400;
  color: #071e5d;
  line-height: 17px;
}

.wx-switch-input {
  transform: scale(0.5);
}

checkbox .wx-checkbox-input {
  width: 30rpx !important;
  height: 30rpx !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: none;
  background: #071e5d;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
