/* pages/LoginCopy/index.wxss */
.wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 30rpx 105rpx 210rpx;
  background-color: white;
}

.header {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.iconCMA {
  width: 155rpx;
  height: 95rpx;
}

.dropDownContainer{
  height: 46rpx;
  width: 180rpx;
  padding: 4rpx 8rpx;
  border-width: 1px;
  border-style: solid;
  border-color:rgb(118, 118, 118);
  overflow: visible;
  position: relative;
  font-size: 24rpx;
  color: #4C4C4C;
}
.arrow{
  position: absolute;
  right: 8rpx;
  top:10rpx;
  font-size: 28rpx;
}
.van-dropdown-menu__item {
  flex-direction: row;
  justify-content: left !important;
}

.mainContainer {
  width: 100%;
  height: 778rpx;
  margin-top: 30rpx;
}

.mainContainer .loginContainer {
  width: 100%;
  height: 700rpx;
  padding: 0 30px 20px 30px;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #f0f1f5;
  margin-bottom: 110rpx;
}

.mainContainer .loginContainer .textSignIn {
  font-size: 1.7em;
  font-weight: normal;
  padding: 40rpx 0rpx 40rpx 0rpx;
  color: #184894;
}

.mainContainer .loginContainer .formArea {
  height: 500rpx;
}

.titleLine {
  font-size: 0.8em;
  color: #4c4c4c;
  margin-bottom: 10rpx;
}

.inputContent {
  border: 1px solid #8d8d8d;
  background-color: white;
  font-size: 0.8em;
  margin-bottom: 40rpx;
  width: 400rpx;
}

.inputContent2 {
  border: 1px solid #8d8d8d;
  background-color: white;
  font-size: 0.8em;
  margin-bottom: 20rpx;
  width: 400rpx;
}

.forgotPassword {
  font-size: 0.8em;
  color: #2563d9;
  margin-left: 200rpx;
  margin-bottom: 45rpx;
  width: 100%;
}

.signIn {
  margin-left: 20rpx;
  background-color: #f0f1f5;
  display: flex;
  flex-direction: row;
}

.textSubmit {
  border-radius: 0%;
  background-color: #d81772;
  font-size: 0.8em;
  color: #fff;
  text-align: center;
  width: 520rpx;
  margin-left: 240rpx;
  /* padding: 0rpx, 15rpx, 0rpx, 15rpx; */
}

.footNote {
  font-size: 0.7em;
  border-top: 1px solid #d7d7d9;
  text-align: center;
  padding: 17rpx 0 0 0;
  color: #4c4c4c;
  font-family: verdana, helvetica, arial, sans-serif
}