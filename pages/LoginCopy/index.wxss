/* pages/LoginCopy/index.wxss */
.wrapper {
  width: 100%;
  min-height: 100vh;
  padding: 30rpx 85rpx 210rpx;
  background-color: white;
}

.header {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.iconCMA {
  width: 155rpx;
  height: 95rpx;
}

.dropDownContainer .van-dropdown-menu{
  height: 50rpx;
  width: 200rpx;
  padding: 2px 3px;
  border-width: 1px;
  border-style: solid;
  border-color: #8d8d8d;
  overflow: visible;
}
.van-dropdown-menu__item {
  flex-direction: row;
  justify-content: space-between;
}


.mainContainer {
  width: 100%;
  height: 978rpx;
  margin-top: 30rpx;
}

.mainContainer .loginContainer {
  width: 100%;
  height: 658rpx;
  padding: 0 30px 20px 30px;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #f0f1f5;
  margin-bottom: 80rpx;
}

.mainContainer .loginContainer .textSignIn {
  font-size: 1.7em;
  font-weight: normal;
  padding: 30rpx 0rpx 30rpx 0rpx;
  color: #184894;
}

.mainContainer .loginContainer .formArea {
  height: 500rpx;
}

.titleLine {
  font-size: 0.8em;
  color: #4c4c4c;
  margin-bottom: 10rpx;
}

.inputContent {
  border: 1px solid #8d8d8d;
  background-color: white;
  font-size: 0.8em;
  margin-bottom: 20rpx;
}

.forgotPassword {
  font-size: 0.8em;
  color: #2563d9;
  margin-left: 210rpx;
  margin-bottom: 30rpx;
}

.signIn {
  background-color: #d81772;
  padding: 0;
  width: 125rpx;
  height: 53rpx;
  border-radius: 0%;
  margin-left: 340rpx;
}

.textSubmit {
  font-size: 0.8em;
  color: #fff;
  text-align: center;
  margin-top: -10rpx;
}

.footNote {
  font-size: 0.7em;
  border-top: 1px solid #d7d7d9;
  text-align: center;
  padding: 17rpx 0 0 0;
  color: #4c4c4c;
  font-family: verdana, helvetica, arial, sans-serif
}