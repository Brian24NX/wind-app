/* packageBooking/pages/UNNumber/index.wxss */
page {
  background-color: #F0F1F5;
  padding: 30rpx;
}

.oneContainer {
  background-color: #FFFFFF;
  padding: 40rpx 48rpx 30rpx;
  margin-bottom: 30rpx;
}

.containerTitle {
  display: flex;
  align-items: center;
  font-size: 56rpx;
  font-family: Antonio-Bold, Antonio;
  font-weight: bold;
  color: #04246A;
  margin-bottom: 12rpx;
}

.containerTitle .titleLine {
  width: 6rpx;
  height: 50rpx;
  margin-right: 12rpx;
  background-color: #E20202;
}

.containerTitle view:nth-last-of-type(1) {
  width: 600rpx;
}

.groups {
  margin-bottom: 40rpx;
}

.line {
  height: 1rpx;
  background-color: #eee;
  margin-bottom: 40rpx;
}

.text-sup {
  font-size: 14rpx;
  vertical-align: top;
  line-height: 4em;
}

.groups .items {
  display: flex;
  width: 100%;
  min-height: 68rpx;
  justify-content: space-between;
  align-items: center;
}

.groups .desc-txt {
  display: block;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #6B7790;
  line-height: 34rpx;
  margin-top:  24rpx;
}

.groups .switchs.left {
  display: flex;
  justify-content: center;
  font-size: 0;
}

.groups .switchs .title {
  font-size: 24rpx;
  padding-left: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #04246A;
}

.groups .switchs .title.off {
  color: #babfcd;
}

.groups .disabled {
  opacity: .7;
}

.groups .desc-unit {
  margin-top: 10rpx;
  text-align: right;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #04246A;
}

.groups .switchs .van-switch {
  background-color: #babfcd;
}

.groups .switchs .van-switch.van-switch--on {
  background-color: #2D75FF;
}

.groups .switchs .van-switch__node {
  box-shadow: none;
  box-sizing: border-box;
  background-color: transparent;
}

.groups .switchs .van-switch__node:before {
  content: '';
  position: absolute;
  width: 86%;
  height: 86%;
  top: 50%;
  left: 50%;
  transform:  translate3d( -50%, -50%, 0);
  border-radius: 100%;
  background-color: #fff;
}

.groups .input-boxs.right {
  display: flex;
  justify-content: flex-end;
}

.groups .input-boxs.right .input-txt {
  font-size: 24rpx;
  color: #04246A;
  line-height: 64rpx;
}

.groups .input-boxs.right .input-txt.header {
  margin-right: 20rpx;
}

.groups .input-boxs.right .input-txt.footer {
  margin-left: 20rpx;
}

.groups .input-boxs.right .footer.off {
  color: #babfcd;
}

.groups .input-boxs.right .inputs {
  border: 1rpx solid #DFDFDF;
  width: 170rpx;
  line-height: 64rpx;
  /* font-size: 28rpx; */
  font-size: 24rpx;
  color: #04246A;
  box-sizing: border-box;
}

.groups .input-boxs.right .inputs .input-ipt {
  height: 64rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.groups .input-boxs.right .selects {
  position: relative;
  margin-left: 20rpx;
  height: 68rpx;
  width: 140rpx;
  padding-left: 28rpx;
}

.arrow-bottom {
  position: absolute;
  top: 50%;
  right: 24rpx;
  transform: translate3d(0, -50%, 0);
  width: 32rpx;
  height: 32rpx;
}

.error-tips {
  justify-content: flex-end;
  font-size: 24rpx;
  color: #E2014B;
  /* position: absolute; */
  /* left: 0; */
  /* top: 90rpx; */
  display: flex;
  align-items: center;
  padding-top: 10rpx;
}

.error-tips image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.titles {
    font-size: 28rpx;
    font-weight: 400;
    color: #04246A;
    margin-bottom: 12rpx;
    /* margin-top: 30rpx; */
}

.textareaContainer {
  border: 1rpx solid #DFDFDF;
  height: 190rpx;
  position: relative;
  padding: 10rpx 20rpx 55rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #04246A;
}

.textareaContainer textarea {
  width: 100%;
  height: 100%;
}

.textareaContainer .fontCount {
  position: absolute;
  bottom: 14rpx;
  right: 18rpx;
  color: #B9BFCA;
  font-size: 28rpx;
}

.confirmBtn {
  height: 88rpx;
  background-color: #2D75FF;
  padding: 0;
  margin: 30rpx auto 0;
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 88rpx;
  border-radius: 0;
}