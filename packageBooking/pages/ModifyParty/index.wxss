/* packageBooking/pages/ModifyParty/index.wxss */
page {
  background-color: #F0F1F5;
  padding: 30rpx 30rpx env(safe-area-inset-bottom);
}

.modifyContainer {
  padding: 40rpx 48rpx;
  background-color: #ffffff;
  margin-bottom: 30rpx;
}

.modifyContainer .modifyTitles {
  display: flex;
  align-items: center;
  font-size: 56rpx;
  font-family: Antonio-Bold, Antonio;
  font-weight: bold;
  color: #04246A;
}

.modifyContainer .modifyTitles .modifyTitleLine {
  width: 6rpx;
  height: 50rpx;
  background-color: #E20202;
  margin-right: 12rpx;
}

.title {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  color: #04246A;
  font-size: 28rpx;
}

.inputContainers {
  width: 100%;
  height: 80rpx;
  background-color: #F1F0F0;
  border: 1rpx solid #E8E7E7;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #071E5D;
  display: flex;
  align-items: center;
  padding: 0 22rpx;
}

.twoModify {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.twoModify .modify {
  width: 48%;
}

.oneModify .inputs {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #DFDFDF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.oneModify .inputs input {
  width: calc(100% - 60rpx);
  height: 100%;
}

.oneModify .inputs image {
  width: 30rpx;
  height: 30rpx;
}

.sureBtn {
  width: 100%;
  height: 88rpx;
  background-color: #2D75FF;
  border-radius: 0;
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 500;
}